{
  "compilerOptions": {
    "target": "ESNext",
    "watch": true,
    "module": "esnext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "DOM",
      "ES2019"
    ],
    "removeComments": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "public",
    "src"
  ],
  "files": [
    "src/index.tsx"
  ],
  "exclude": [
    "node_modules",
    "json-server"
  ]
}
